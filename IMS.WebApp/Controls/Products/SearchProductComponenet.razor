<div class="input-group">
    <input 
        type="text" 
        class="form-control" 
        placeholder="Type product name here to search" 
        @bind-value="productNameToSearch" />
    <button 
        class="btn btn-success input-group-text" 
        type="button"
        @onclick="OnSearch">Search</button>
</div>

<br />

@code {
    private string productNameToSearch = string.Empty;

    [Parameter]
    public EventCallback<string> OnSearchProduct { get; set; }

    private void OnSearch()
    {
        OnSearchProduct.InvokeAsync(productNameToSearch);
    }
}
